{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "buildCommand": "npm run build"
    },
    "deploy": {
        "startCommand": "HOSTNAME=0.0.0.0 PORT=${PORT:-3000} RAILWAY_DEPLOYMENT=true node .next/standalone/server.js",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300
    }
}